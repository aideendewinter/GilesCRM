<Grid x:Name="DefaultView">
  <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="10" />
      <RowDefinition Height="Auto" />
  </Grid.RowDefinitions>
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="Auto" />
    <ColumnDefinition Width="10" />
    <ColumnDefinition Width="Auto" />
  </Grid.ColumnDefinitions>
  <sdk:GridSplitter Grid.Column="1" Grid.RowSpan="1" HorizontalAlignment="Right" VerticalAlignment="Stretch" />
  <sdk:GridSplitter Grid.Row="1" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" />
  <ContentControl Grid.Column="0" x:Name="Left" />
  <ContentControl Grid.Column="2" x:Name="Right" />
  <ContentControl Grid.Row="2" Grid.ColumnSpan="3" x:Name="Bottom" />
</Grid>
